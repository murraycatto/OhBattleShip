%p#notice= notice
%div#user_id{data:{id:"#{@user.id}"}}
%div#authenticity_token{data:{token:"#{form_authenticity_token}"}}
%div.row
  %div.col-sm-6
    %div#game_status.row
      = render :file => '/users/game_status'
  %div.col-sm-6
    %div#ships_sunk.row
      = render :file => '/users/ships_sunk'
%table.table.ship-board
  - for x in 0..9
    %tr
      - for y in 0..9
        - nuke = @nukes.find_by(x: x, y:y)
        - nuke_class = ""
        - on_click = ""
        - if !nuke.nil?
          - nuke_class = nuke.status
        - else
          - on_click = "nuke(#{x},#{y});"
        %td{id:"#{x}-#{y}",class:"#{nuke_class}",onclick: "#{on_click}"}
